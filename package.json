{
  "name": "chatwoot-zapi-middleware",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "API Node.js para intermediar Chatwoot e Z-API com Docker Compose",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "consumer": "node src/consumer.js",
    "dev": "nodemon src/app.js",
    "dev:consumer": "nodemon src/consumer.js",
    "test:webhook": "powershell -NoProfile -ExecutionPolicy Bypass -File tests/zapi_to_chatwoot.ps1 -BaseUrl http://localhost:3000",
    "webhook-url": "curl http://localhost:3000/webhook-url",
    "test:http": "node tests/http_test.js",
    "test:callback": "node tests/callback_test.js",
    "ticket-stats": "curl http://localhost:3000/webhooks/ticket-stats",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix"
  },
  "keywords": [
    "chatwoot",
    "zapi",
    "whatsapp",
    "middleware",
    "webhook"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "form-data": "^4.0.0",
    "morgan": "^1.10.0",
    "nats": "^2.29.3"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "nodemon": "^3.1.4"
  }
}
